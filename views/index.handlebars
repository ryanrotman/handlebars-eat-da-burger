<!-- Burger Image -->
<div class="container center-align">
    <img class="responsive-img" src="../public/assets/img/Burger_1.JPG" width="250px" height="250px" alt="Burger on grill">
</div>

<br>
<br>

<div class="container center-align">
    <div class="row">
        <!-- Burgers to Eat Section -->
        <div class="col s12 m6">
            <div class="card-panel blue-grey darken-1">
                <span class="white-text">Burgers to Eat!</span>
            </div>
        </div>
        <!-- Burgers Devoured Section -->
        <div class="col s12 m6">
            <div class="card-panel blue-grey darken-1">
                <span class="white-text">Burgers Devoured!</span>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Burgers to Eat Section Cards -->
        <div class="col s12 m6" id="eat">
            <div class="card blue-grey darken-1">
                {{#each burger}}
                    {{#unless devoured}}
                        {{> burger/burger-block devoured=false}}
                    {{/unless}}
                {{/each}}
            </div>
        </div>
        <!-- Burgers Devoured Section Cards -->
        <div class="col s12 m6" id="devoured">
            <div class="card blue-grey darken-1">
                {{#each burger}}
                    {{#unless devoured}}
                        {{> burger/burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Burger Input Field -->
        <form class="col s12 l6 offset-l3">
            <div class="row">
            <div class="input-field col s12">
                <textarea id="textarea1" class="materialize-textarea"></textarea>
                <label for="textarea1">Enter burger name here</label>
            </div>
            </div>
        </form>
    </div>
    <!-- Burger Submit Button -->
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="fas fa-hamburger"></i>
    </button>
</div>

